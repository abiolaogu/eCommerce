{
  "compilerOptions": {
    "target": "ES2021",
    "module": "ESNext",
    "lib": ["ES2021", "DOM"],
    "moduleResolution": "Bundler",
    "jsx": "react-jsx",
    "strict": true,
    "noEmit": true,
    "skipLibCheck": true,
    "types": ["vite/client"],
    "baseUrl": ".",
    "paths": {
      "@fusioncommerce/omniroute-sdk": ["../packages/omniroute-sdk/src/index.ts"],
      "@fusioncommerce/omniroute-sdk/*": ["../packages/omniroute-sdk/src/*"]
    }
  },
  "include": ["src", "codegen.ts", "vite.config.ts"]
}
