{
  "name": "fusioncommerce",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "workspaces": [
    "packages/*",
    "services/*"
  ],
  "scripts": {
    "build": "npm run build --workspaces --if-present",
    "lint": "npm run lint --workspaces --if-present",
    "test": "npm run test --workspaces --if-present",
    "ci": "npm run lint && npm run test && npm run build"
  },
  "devDependencies": {
    "@types/jest": "latest",
    "jest": "^29.7.0",
    "lodash": "^4.17.21",
    "ts-jest": "^29.2.5",
    "typescript": "^5.4.5"
  }
}
